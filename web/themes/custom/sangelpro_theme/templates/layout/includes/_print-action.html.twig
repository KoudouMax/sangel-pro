{{ attach_library('sangelpro_theme/print-actions') }}

{% set label = label|default('Imprimer la page'|t) %}

<div class="flex justify-end print:hidden">
	<button type="button" class="inline-flex items-center gap-2 rounded-full border border-sangel-primary px-4 py-1 text-xs font-semibold text-sangel-primary transition hover:bg-sangel-primary/10 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-sangel-primary/40 focus-visible:ring-offset-2 focus-visible:ring-offset-white" data-sangel-print aria-label="{{ label }}">
		<span aria-hidden="true" class="inline-flex h-4 w-4 items-center justify-center text-sangel-primary">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
				<path d="M7 9V3h10v6"/>
				<path d="M7 17H5a2 2 0 0 1-2-2v-4a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v4a2 2 0 0 1-2 2h-2"/>
				<path d="M7 14h10v7H7z"/>
				<path d="M17 9v2"/>
			</svg>
		</span>
		<span>{{ label }}</span>
	</button>
</div>
