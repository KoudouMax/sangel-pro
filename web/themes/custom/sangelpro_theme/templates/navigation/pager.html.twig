{#
  Custom pager for SangelPro.
#}
{% if items %}
  {% set pager_attributes = attributes|default(create_attribute()) %}
  <nav{{ pager_attributes.addClass('sangel-pager', 'flex', 'flex-col', 'items-center', 'gap-4') }} role="navigation" aria-labelledby="{{ heading_id }}">
    <{{ pagination_heading_level }} id="{{ heading_id }}" class="sr-only">{{ 'Pagination'|t }}</{{ pagination_heading_level }}>
    <div class="flex w-full max-w-xl items-center justify-between gap-3 text-xs uppercase tracking-[0.28em] text-sangel-text/40">
      {% if items.previous %}
        <a href="{{ items.previous.href }}" rel="prev" class="inline-flex items-center gap-2 rounded-full border border-sangel-ice px-3 py-1.5 font-semibold text-sangel-text transition hover:border-sangel-primary hover:text-sangel-primary" title="{{ 'Go to previous page'|t }}"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
          <span aria-hidden="true">‹</span>
          <span>{{ 'Previous'|t }}</span>
        </a>
      {% else %}
        <span class="inline-flex items-center gap-2 rounded-full border border-transparent px-3 py-1.5 text-sangel-text/30">‹ {{ 'Previous'|t }}</span>
      {% endif %}
      <span class="text-sangel-primary">{{ 'Page @current'|t({'@current': current}) }}</span>
      {% if items.next %}
        <a href="{{ items.next.href }}" rel="next" class="inline-flex items-center gap-2 rounded-full border border-sangel-ice px-3 py-1.5 font-semibold text-sangel-text transition hover:border-sangel-primary hover:text-sangel-primary" title="{{ 'Go to next page'|t }}"{{ items.next.attributes|without('href', 'title', 'rel') }}>
          <span>{{ 'Next'|t }}</span>
          <span aria-hidden="true">›</span>
        </a>
      {% else %}
        <span class="inline-flex items-center gap-2 rounded-full border border-transparent px-3 py-1.5 text-sangel-text/30">{{ 'Next'|t }} ›</span>
      {% endif %}
    </div>
    <ul class="flex items-center gap-2 rounded-full bg-white p-2 shadow-[0_20px_40px_-28px_rgba(15,23,42,0.45)]">
      {% if items.first %}
        <li>
          <a href="{{ items.first.href }}" title="{{ 'Go to first page'|t }}" class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-sangel-ice text-sangel-text transition hover:border-sangel-primary hover:text-sangel-primary"{{ items.first.attributes|without('href', 'title') }}>
            <span class="sr-only">{{ 'First page'|t }}</span>
            <span aria-hidden="true">«</span>
          </a>
        </li>
      {% endif %}
      {% if ellipses.previous %}
        <li class="px-2 text-sangel-text/40">&hellip;</li>
      {% endif %}
      {% for key, item in items.pages %}
        {% set is_current = (current == key) %}
        <li>
          <a href="{{ item.href }}" title="{{ is_current ? 'Current page'|t : 'Go to page @key'|t({'@key': key}) }}" class="inline-flex h-9 w-9 items-center justify-center rounded-full text-sm font-semibold transition {{ is_current ? 'bg-sangel-primary text-white shadow-[0_12px_28px_-16px_rgba(29,74,156,0.6)]' : 'bg-white text-sangel-text/70 hover:bg-sangel-primary/10 hover:text-sangel-primary' }}"{{ item.attributes|without('href', 'title') }}>
            <span class="sr-only">{{ 'Page'|t }}</span>
            {{ key }}
          </a>
        </li>
      {% endfor %}
      {% if ellipses.next %}
        <li class="px-2 text-sangel-text/40">&hellip;</li>
      {% endif %}
      {% if items.last %}
        <li>
          <a href="{{ items.last.href }}" title="{{ 'Go to last page'|t }}" class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-sangel-ice text-sangel-text transition hover:border-sangel-primary hover:text-sangel-primary"{{ items.last.attributes|without('href', 'title') }}>
            <span class="sr-only">{{ 'Last page'|t }}</span>
            <span aria-hidden="true">»</span>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
