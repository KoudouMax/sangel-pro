{% set attrs = (attributes is defined ? attributes : create_attribute()).addClass('auth-shell__form') %}

<form{{ attrs }}>
  {# Dans le hook "form", c’est element.* (pas form.*) #}
  {{ element.form_build_id }}
  {{ element.form_token }}
  {{ element.form_id }}

  {% if element.name is defined %}
    <div class="auth-shell__field">{{ element.name }}</div>
  {% endif %}

  {% if element.pass is defined %}
    <div class="auth-shell__field">{{ element.pass }}</div>
  {% endif %}

  {# Ici, on ne peut pas faire without() sur children (c’est déjà rendu).
     Donc on doit rendre explicitement le reste via element.* #}
  {% if element.actions is defined %}
    <div class="auth-shell__actions">
      {{ element.actions }}
    </div>
  {% endif %}
</form>
