{#
  Bloc des actions locales (actions rapides).
#}

{% set classes_ = [
  'sangel-local-actions',
  'rounded-3xl',
  'border',
  'border-sangel-ice-strong',
  'bg-white',
  'p-4',
  'shadow-sm'
] %}

{% set classes = [
  'rounded-2xl',
  'border', 
  'border-sangel-ice', 
  'bg-gradient-to-r', 
  'from-white', 
  'to-sangel-ice/40', 
  'p-6', 
  'shadow-sm',
  'mb-6'
] %}

{% set action_items = [] %}
{% for key, item in content %}
	{% if key|first != '#' and item['#link'] is defined %}
		{% set action_items = action_items|merge([item['#link']]) %}
	{% endif %}
{% endfor %}

{% if action_items %}
	<nav{{attributes.addClass(classes).setAttribute('aria-label','Actionsrapides')}}>
		<ul class="flex flex-wrap items-center gap-3">
			{% for item in action_items %}
				<li class="list-none">
					{{ link(
            item.title,
            item.url,
            {
              'class': [
                'inline-flex',
                'items-center',
                'gap-2',
                'rounded-full',
                'border',
                'border-sangel-primary',
                'px-6',
                'py-2',
                'text-xs',
                'font-semibold',
                'text-sangel-primary',
                'transition',
                'hover:bg-sangel-primary/10',
                'focus:outline-none',
                'focus:ring-2',
                'focus:ring-sangel-primary/30'
              ]
            }
          ) }}
				</li>
			{% endfor %}
		</ul>
	</nav>
{% endif %}
