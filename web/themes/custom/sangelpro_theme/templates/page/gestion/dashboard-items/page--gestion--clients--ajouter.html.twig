{% embed '@sangelpro_theme/layout/page--gestion.html.twig' with { title: 'Ajouter un client'|t, show_back_link: true } %}

  {% block content %}
    <div class="gestion-client-create">
      <section class="gestion-client-create__intro">
        <h2 class="gestion-client-create__headline">{{ 'Préparez le dossier client'|t }}</h2>
        <p class="gestion-client-create__lead">{{ 'Renseignez les informations clés afin que le client puisse accéder à son espace et à ses catalogues personnalisés.'|t }}</p>

        <ul class="gestion-client-create__checklist">
          <li>
            <span class="gestion-client-create__check-icon" aria-hidden="true">✔</span>
            <div>
              <span class="gestion-client-create__check-title">{{ 'Identité de la société'|t }}</span>
              <p>{{ 'Nom commercial, raison sociale et coordonnées de contact.'|t }}</p>
            </div>
          </li>
          <li>
            <span class="gestion-client-create__check-icon" aria-hidden="true">✔</span>
            <div>
              <span class="gestion-client-create__check-title">{{ 'Utilisateur référent'|t }}</span>
              <p>{{ 'Associez un compte client existant ou créez-le pour l’inviter automatiquement.'|t }}</p>
            </div>
          </li>
          <li>
            <span class="gestion-client-create__check-icon" aria-hidden="true">✔</span>
            <div>
              <span class="gestion-client-create__check-title">{{ 'Segment & droits'|t }}</span>
              <p>{{ 'Sélectionnez le type de client, les catalogues disponibles et les paramètres d’accès.'|t }}</p>
            </div>
          </li>
        </ul>
      </section>

      <section class="gestion-client-create__form">
        {{ drupal_entity_form('node', values={type: 'client'}) }}
      </section>
    </div>
  {% endblock %}

{% endembed %}
